<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".General"
    >

    <ScrollView
        android:id="@+id/scroll_view_general"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp">

            <TextView
                android:id="@+id/txt_ncr_npr_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:text="nCr and nPr"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/txt_ncr_npr_answer_general"
                android:layout_width="268dp"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:hint="Answer"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_r_general" />

             <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_npr_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_back_4"
                app:layout_constraintHorizontal_bias="0.5"

                app:layout_constraintVertical_bias="0.08"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_ncr_general"
                app:layout_constraintTop_toBottomOf="@+id/txt_ncr_npr_answer_general" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_back_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.077"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.092">

                    <TextView
                        android:id="@+id/txt_general_npr_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="nPr"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/img_general_npr_btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_general_npr_btn"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="55dp"
                        android:src="@drawable/arrows"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_general_npr_btn"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <EditText
                android:id="@+id/txt_r_general"
                android:layout_width="122dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Type r"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_n_general"
                app:layout_constraintTop_toBottomOf="@+id/txt_ncr_npr_name"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/txt_n_general"
                android:layout_width="114dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Type n"
                android:inputType="number"
                app:layout_constraintEnd_toStartOf="@+id/txt_r_general"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ncr_npr_name"
                tools:ignore="MissingConstraints" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_ncr_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_back_4"
                app:layout_constraintHorizontal_bias="0.5"

                app:layout_constraintVertical_bias="0.08"
                app:layout_constraintEnd_toStartOf="@+id/btn_npr_general"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ncr_npr_answer_general">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_back_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.077"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.092">

                    <TextView
                        android:id="@+id/txt_general_ncr_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="nCr"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/img_general_ncr_btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_general_ncr_btn"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="55dp"
                        android:src="@drawable/arrows"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_general_ncr_btn"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/txt_bi_term_expansion_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:background="#2196F3"
                android:text="Bi Term Expansion"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_npr_general"
                tools:ignore="HardcodedText,SpUsage" />


            <EditText
                android:id="@+id/txt_bi_term_power"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="132dp"
                android:ems="10"
                android:hint="n"
                android:inputType="numberSigned"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/txt_bi_term_expansion_name" />

            <EditText
                android:id="@+id/txt_bi_term_a"
                android:layout_width="91dp"
                android:layout_height="72dp"
                android:layout_marginTop="156dp"
                android:digits="xy1234567890*/^. "
                android:ems="10"
                android:hint="a"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toStartOf="@+id/txt_bi_term_operator"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/txt_bi_term_expansion_name" />

            <EditText
                android:id="@+id/txt_bi_term_operator"
                android:layout_width="39dp"
                android:layout_height="72dp"
                android:layout_marginTop="156dp"
                android:digits="+-. "
                android:ems="10"
                android:hint="+/-"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toStartOf="@+id/txt_bi_term_b"
                app:layout_constraintStart_toEndOf="@+id/txt_bi_term_a"
                app:layout_constraintTop_toBottomOf="@+id/txt_bi_term_expansion_name" />

            <EditText
                android:id="@+id/txt_bi_term_b"
                android:layout_width="81dp"
                android:layout_height="71dp"
                android:layout_marginTop="156dp"
                android:digits="xy1234567890*/^ ."
                android:ems="10"
                android:hint="b"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                app:layout_constraintStart_toEndOf="@+id/txt_bi_term_operator"
                app:layout_constraintTop_toBottomOf="@+id/txt_bi_term_expansion_name" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="28dp"
                android:layout_height="72dp"
                android:layout_marginTop="42dp"
                android:text=")"
                android:textSize="50sp"
                app:layout_constraintEnd_toStartOf="@+id/txt_bi_term_power"
                app:layout_constraintStart_toEndOf="@+id/txt_bi_term_b"
                app:layout_constraintTop_toBottomOf="@+id/txt_bi_term_rules"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="28dp"
                android:layout_height="72dp"
                android:layout_marginTop="156dp"
                android:text="("
                android:textSize="50sp"
                app:layout_constraintEnd_toStartOf="@+id/txt_bi_term_a"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_bi_term_expansion_name" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_bi_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/btn_back_4"
                app:layout_constraintHorizontal_bias="0.5"

                app:layout_constraintVertical_bias="0.08"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_bi_term_b">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_back_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.077"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.092">

                    <TextView
                        android:id="@+id/txt_general_bi_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="Expand"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/img_general_bi_btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_general_bi_btn"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="55dp"
                        android:src="@drawable/arrows"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_general_bi_btn"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/txt_bi_term_answer"
                android:layout_width="306dp"
                android:layout_height="88dp"
                android:layout_marginTop="21dp"
                android:text="Answer"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_bi_term" />


            <TextView
                android:id="@+id/txt_bi_term_rules"
                android:layout_width="310dp"
                android:layout_height="129dp"
                android:layout_marginTop="8dp"
                android:text="Syntax:\n1) order = constant_variables\n2) n should be integer\n3) Do not use parentheses\n4) Can be used only numbers for this\n(This application is designed to help you to\nvalidate your answers, Not to cheat)"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_bi_term_expansion_name"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_quadratic_equation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="#2196F3"
                android:text="Quadratic Equations"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_bi_term_answer"
                tools:ignore="HardcodedText,SpUsage" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_roots_quadratic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/btn_back_4"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_answer_quadratic"
                app:layout_constraintVertical_bias="0.08">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_back_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.077"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.092">

                    <TextView
                        android:id="@+id/txt_general_qua_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="Solutions"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/img_general_qua_btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_general_qua_btn"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="55dp"
                        android:src="@drawable/arrows"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_general_qua_btn"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/textView8"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="X^2 + "
                android:textSize="19sp"
                app:layout_constraintEnd_toStartOf="@+id/txt_b_quadratic"
                app:layout_constraintStart_toEndOf="@+id/txt_a_quadratic"
                app:layout_constraintTop_toBottomOf="@+id/txt_quadratic_equation_name" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="35dp"
                android:layout_height="51dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="X + "
                android:textSize="19sp"
                app:layout_constraintEnd_toStartOf="@+id/txt_c_quadratic"
                app:layout_constraintStart_toEndOf="@+id/txt_b_quadratic"
                app:layout_constraintTop_toBottomOf="@+id/txt_quadratic_equation_name" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="48dp"
                android:layout_height="52dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="=0"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_c_quadratic"
                app:layout_constraintTop_toBottomOf="@+id/txt_quadratic_equation_name" />

            <TextView
                android:id="@+id/txt_answer_quadratic"
                android:layout_width="284dp"
                android:layout_height="114dp"
                android:layout_marginTop="18dp"
                android:text="Answer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <EditText
                android:id="@+id/txt_a_quadratic"
                android:layout_width="51dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:digits="0123456789.-"
                android:ems="10"
                android:hint="a"
                android:inputType="number"
                app:layout_constraintEnd_toStartOf="@+id/textView8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_quadratic_equation_name" />

            <EditText
                android:id="@+id/txt_c_quadratic"
                android:layout_width="53dp"
                android:layout_height="54dp"
                android:layout_marginTop="40dp"
                android:digits="0123456789.-"
                android:ems="10"
                android:hint="c"
                android:inputType="number"
                android:text=""
                app:layout_constraintEnd_toStartOf="@+id/textView10"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/txt_quadratic_equation_name" />

            <EditText
                android:id="@+id/txt_b_quadratic"
                android:layout_width="46dp"
                android:layout_height="52dp"
                android:layout_marginTop="40dp"
                android:digits="0123456789.-"
                android:ems="10"
                android:hint="b"
                android:inputType="number"
                android:text=""
                app:layout_constraintEnd_toStartOf="@+id/textView9"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/txt_quadratic_equation_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>